<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#f8f8f8"
    android:orientation="horizontal" >


    <LinearLayout
        android:padding="5dp"
        android:layout_margin="5dp"
        android:background="@drawable/roundwhitedrawable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:background="@drawable/round_drwable_magenta"
            android:layout_height="80dp"
            android:layout_width="80dp"
            >
        </RelativeLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        >

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        >
    <TextView
        android:layout_gravity="bottom"
        android:gravity="center|left"
        android:layout_weight=".5"
        android:id="@+id/headingname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="@color/textheadercolor"
        android:textSize="17dp"
         />

        <TextView
            android:layout_gravity="bottom"
            android:gravity="center|left"
            android:text="100USD"
            android:layout_weight=".5"
            android:id="@+id/headingdollaramt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="@color/textheadercolor"
             />
    </LinearLayout>





    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        >
        <TextView
            android:layout_gravity="bottom"

            android:textColor="@color/textcolorbootom"
            android:layout_weight=".5"
            android:id="@+id/headingdate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Completed sep 27"
            android:gravity="center|left"
            android:textSize="14dp"
             />

        <TextView
            android:layout_gravity="bottom"
            android:gravity="center|left"
            android:text=" Rs.40,000"
            android:layout_weight=".5"
            android:id="@+id/headingamountinpaircurrency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/textcolorbootom"
            android:textSize="14dp"
             />
    </LinearLayout>
    </LinearLayout>

</LinearLayout>
</LinearLayout>