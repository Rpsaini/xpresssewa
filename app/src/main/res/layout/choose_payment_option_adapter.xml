<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_margin="7dp"
    android:id="@+id/ll_selectbank"
    android:layout_height="wrap_content">


    <LinearLayout
        android:weightSum="1"
        android:layout_marginLeft="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:transformPivotX="-2dp"
            android:layout_height="70dp"
            android:translationX="0dp"
            android:layout_width="70dp"
            android:layout_gravity="center"
            >
          <ImageView
              android:id="@+id/paymentTypeImg"
              android:layout_centerInParent="true"
              android:tint="@color/skybluecolorcode"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:scaleType="fitXY"
              android:src="@drawable/account_icon"
              ></ImageView>




        </RelativeLayout>

        <LinearLayout
            android:layout_marginLeft="4dp"
            android:layout_gravity="center"
            android:layout_weight=".88"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            <TextView
                android:textStyle="bold"
                android:id="@+id/txt_paymentidname"
                android:gravity="center|left"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="PayId"
                android:textSize="17dp"
                android:textColor="@color/black_color"
                android:paddingRight="80dp"
                ></TextView>

                <TextView
                    android:visibility="gone"
                    android:paddingRight="10dp"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/tv_exactfee"
                    android:gravity="center|left"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Fees:"
                    android:textSize="12dp"
                    android:textColor="@color/textcolor"
                    ></TextView>
            </RelativeLayout>


            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/txt_feededuction"
                android:gravity="center|left"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="0.75 is total aud fee so recipient will get 548 Ir"
                style="@style/white12"
                android:textSize="@dimen/font_fourteen"
                android:textColor="@color/textcolor"

                ></TextView>



        </LinearLayout>


        <RadioButton
            android:layout_marginTop="9dp"
            android:id="@+id/paymentMethod_radio"
            android:layout_weight=".12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:buttonTint="@color/blue_bt_color"
            ></RadioButton>


