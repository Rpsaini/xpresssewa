<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/rr_setPin"
    tools:context=".View.SetPinActivity">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_marginTop="5dp"
        android:padding="12dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/next_arrow"
        android:rotation="180"
        android:tint="@color/black_color"
        ></ImageView>


    <ImageView
        android:tint="@color/textcolor"
        android:alpha=".8"
        android:layout_marginTop="10dp"
        android:id="@+id/resetPin"
        android:padding="0dp"
        android:layout_height="20dp"
        android:layout_width="40dp"
        android:rotation="90"
        android:layout_alignParentEnd="true"
        android:src="@drawable/threedots"
        ></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >
    <TextView
        android:id="@+id/createpin"
        android:gravity="center"
        android:textStyle="bold"
        style="@style/black18"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/creteourpin"
        ></TextView>
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/txt_securely"
        android:layout_below="@+id/createpin"
        android:gravity="center"
        android:textStyle="bold"
        style="@style/black13"
        android:textColor="@color/grey_color"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/usepin"
        ></TextView>


        <LinearLayout

            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_height="50dp"
            android:layout_below="@+id/txt_securely"
            android:layout_width="280dp"
            android:orientation="horizontal"
            >

            <TextView
                android:inputType="numberPassword"
                android:id="@+id/txt_pinone"
                android:layout_marginEnd="5dp"
                android:layout_height="match_parent"
                android:layout_width="70dp"
                android:text=""
                android:gravity="center"
                style="@style/black20"
                ></TextView>
            <TextView
                android:inputType="numberPassword"
                android:id="@+id/txt_pintwo"
                android:layout_marginEnd="5dp"
                android:layout_height="match_parent"
                android:layout_width="70dp"
                android:text=""
                android:gravity="center"
                style="@style/black20"
                ></TextView>
            <TextView
                android:inputType="numberPassword"
                android:id="@+id/txt_pinthree"
                android:layout_marginEnd="5dp"
                android:layout_height="match_parent"
                android:layout_width="70dp"
                android:text=""
                android:gravity="center"
                style="@style/black20"
                ></TextView>
            <TextView
                android:inputType="numberPassword"
                android:id="@+id/txt_pinfour"
                android:layout_marginEnd="5dp"
                android:layout_height="match_parent"
                android:layout_width="70dp"
                android:text=""
                android:gravity="center"
                style="@style/black20"
                ></TextView>

        </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="70dp"
        android:layout_gravity="center"
        android:layout_height="1dp"
        android:layout_below="@+id/txt_securely"
        android:layout_width="280dp"
        android:orientation="horizontal"
        >
        <View
            android:background="@color/dark_green_color"
            android:layout_height="1dp"
            android:layout_width="70dp"
            android:layout_marginEnd="5dp"
            ></View>
        <View
            android:background="@color/dark_green_color"
            android:layout_height="1dp"
            android:layout_width="70dp"

            android:layout_marginEnd="5dp"
            ></View>
        <View
            android:background="@color/dark_green_color"
            android:layout_height="1dp"
            android:layout_width="70dp"

            android:layout_marginEnd="5dp"
            ></View>

        <View
            android:background="@color/dark_green_color"
            android:layout_height="1dp"
            android:layout_width="70dp"

            android:layout_marginEnd="5dp"
            ></View>


    </LinearLayout>

    <GridView

        android:verticalSpacing="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:horizontalSpacing="10dp"
        android:nestedScrollingEnabled="true"
        android:layout_marginTop="10dp"
        android:scrollbarThumbVertical="@android:color/transparent"
        android:id="@+id/grid_restaurantimages"
        android:numColumns="4"
        android:gravity="center"
        android:stretchMode="columnWidth"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </GridView>
    </LinearLayout>
</RelativeLayout>