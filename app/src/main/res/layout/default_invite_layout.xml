<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:translationY="30dp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_100"
        android:layout_gravity="bottom"
        android:src="@drawable/ic_wave"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <include layout="@layout/toolbar_with_notification"/>

        <RelativeLayout
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            >

    <ImageView
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/margin_10"
        android:src="@drawable/refer_earn_image"
        />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/referandEarn"
            android:gravity="center"
            android:textColor="@color/greencolor"
            android:textSize="16dp"
            ></TextView>
        </RelativeLayout>

    <TextView
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/margin_30"
        android:layout_marginLeft="30dp"
        android:gravity="center_horizontal"
        android:text="@string/refer_and_earn_message"
        android:textColor="@color/blue_bt_color"

        android:textSize="@dimen/font_twelve" />


    </LinearLayout>


    <LinearLayout

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:layout_height="wrap_content"
        >


    <TextView
        android:id="@+id/tv_invite"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/white_color"
        android:textSize="@dimen/font_fifteen"
        android:textAllCaps="true"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginRight="@dimen/margin_30"
        android:layout_marginBottom="@dimen/margin_30"
        style="@style/button_style"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="@string/invite_friends"
        />


    <TextView
        android:id="@+id/txt_copy_link"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/blue_bt_color"
        android:textSize="@dimen/font_fifteen"
        android:textAllCaps="true"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginRight="@dimen/margin_30"
        android:layout_marginBottom="@dimen/margin_30"
        android:background="@drawable/border_layout_blue"

        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="@string/copy_link"
        />
    </LinearLayout>

</RelativeLayout>