<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:padding="10dp"
    android:layout_margin="15dp"
    android:orientation="vertical"
    android:background="@drawable/wallet_drawable"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/selected_Curreny"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"></ImageView>

    <TextView
        android:id="@+id/txt_currency_name"
        android:textColor="@color/black_color"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text=""
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:textSize="17dp"
        >
    </TextView>

    <TextView
        android:id="@+id/txt_msg"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Are you sure,want to open this balance ?"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        >
    </TextView>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center|right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <TextView


        android:id="@+id/txt_no"
        android:layout_height="40dp"
        android:layout_width="60dp"
        android:text="No"
        android:textSize="17dp"
        android:gravity="center"
        android:textColor="@color/black_color"
        ></TextView>

        <TextView
            android:textSize="17dp"
            android:textColor="@color/black_color"
            android:id="@+id/txt_yes"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_width="80dp"
            android:text="Yes"
            ></TextView>
    </LinearLayout>




</LinearLayout>