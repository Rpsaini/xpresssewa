<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_linearlayoutadditional"
    android:background="@color/white_color"
    tools:context=".View.AdditionInformation">

    <include layout="@layout/toolbar_with_back"/>

    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/white_color"
        android:orientation="vertical"
        >
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/additioninformation"
    android:textColor="@color/black_color"
    android:textSize="22sp"
    ></TextView>

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To help us keep Money Transfer safe and secure. Please let us know why you are making this transfer."
            android:textColor="@color/textcolor"
            android:textSize="14sp"
            ></TextView>

</LinearLayout>


    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/transferpurpose"
        android:textColor="@color/black_color"
        android:textSize="14sp"
        ></TextView>

    <LinearLayout
        android:id="@+id/ll_selectReasonDialog"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="38dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        >
        <TextView
            android:paddingBottom="3dp"
            android:id="@+id/txt_showselected_reason"
            android:layout_width="0dp"
            android:layout_weight=".9"
            android:layout_height="38dp"
            android:text="Select a reason"
            android:gravity="center|left|bottom"

            android:textColorHint="@color/light_grey_color"
            android:textColor="@color/textcolor"
            android:textSize="15sp"
            ></TextView>

        <ImageView
            android:paddingBottom="3dp"
            android:layout_gravity="bottom"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight=".1"

            android:src="@drawable/next_arrow"
            android:rotation="90"
            ></ImageView>
    </LinearLayout>
    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/textcolor"
        ></View>


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_if_other_transfer"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Other reason of transfer"
            android:textColor="@color/black_color"
            android:textSize="14sp"
            ></TextView>
        <EditText
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:layout_height="45dp"
            android:layout_width="match_parent"
            android:id="@+id/txt_other_rason_of_transfer"
            android:maxLines="1"
            android:imeOptions="actionDone"
            android:textColor="@color/textcolor"
            android:textColorHint="@color/textcolor"
            android:textSize="15sp"
            android:singleLine="true"
            android:hint="Other reason"
            ></EditText>

        <View
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="@color/textcolor"
            ></View>
    </LinearLayout>



    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/referenceby"
        android:textColor="@color/black_color"
        android:textSize="14sp"
        ></TextView>

    <LinearLayout
        android:id="@+id/ll_selectreference"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="38dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        >

        <TextView
            android:id="@+id/txt_showselected_reference"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight=".9"
            android:gravity="bottom"
            android:paddingBottom="3dp"
            android:text="Select a reference"
            android:textColor="@color/textcolor"
            android:textColorHint="@color/light_grey_color"
            android:textSize="15sp"></TextView>

        <ImageView
            android:paddingBottom="3dp"
            android:layout_gravity="bottom"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight=".1"
            android:src="@drawable/next_arrow"
            android:rotation="90"
            ></ImageView>
    </LinearLayout>
    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/textcolor"
        ></View>


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_if_other"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please give us other reference"
            android:textColor="@color/black_color"
            android:textSize="14sp"
            ></TextView>
    <EditText
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:layout_height="45dp"
        android:layout_width="match_parent"
        android:id="@+id/txt_enter_other"
        android:maxLines="1"
        android:imeOptions="actionDone"
        android:textColor="@color/textcolor"
        android:textColorHint="@color/textcolor"
        android:textSize="15sp"
        android:singleLine="true"
        android:hint="Other reference"
        ></EditText>

        <View
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="@color/textcolor"
            ></View>
</LinearLayout>

    <TextView
        android:layout_marginTop="50dp"
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:gravity="center_horizontal"
        android:padding="@dimen/margin_10"
        android:textAllCaps="true"
        android:text="@string/continue_"
        android:textColor="@color/white_color"
        style="@style/button_style"
        android:textSize="@dimen/font_eighteen" />
</LinearLayout>