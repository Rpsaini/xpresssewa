<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:id="@+id/ll_selectrecipient"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/ll_listrow"
        android:background="@color/white"
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:orientation="horizontal"
        >
        <RelativeLayout


            android:layout_height="71dp"
            android:translationX="0dp"
            android:layout_width="70dp"
            android:layout_gravity="center"
            >


            <ImageView
                android:padding="10dp"
                android:textAllCaps="true"
                android:id="@+id/img_notification_icon"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:text=""
                android:src="@drawable/placeholderimg"
                android:textColor="@color/white_color"
                android:textSize="30dp"
                ></ImageView>

        </RelativeLayout>

        <LinearLayout

            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:layout_weight=".75"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tt_noti_title"
                android:gravity="center|left"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/username"
                android:textSize="20dp"
                android:textColor="@color/black_color"


                ></TextView>

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/tt_notideatil"
                android:gravity="center|left"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/accountendingwith"
                style="@style/white12"
                android:textColor="@color/textcolor"

                ></TextView>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight=".25"
            android:orientation="vertical"
            >

             <TextView
                   android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/img_userflag"
                    android:id="@+id/tt_noti_date"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Date"
                    android:textSize="16dp"
                    android:textColor="@color/black_color"
                >
             </TextView>

             <TextView
                android:visibility="gone"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/account_type"
                style="@style/white12"
                ></TextView>
        </RelativeLayout>
    </LinearLayout>



    <TextView
        android:visibility="gone"
        android:id="@+id/txt_loadmore"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:text="Load More"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:gravity="center|top"
        android:textColor="@color/bt_green_color"
        />

</LinearLayout>