<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/blue_bt_color"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/rr_rocket_fly"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:translationX="-5dp"
            android:id="@+id/txt_seconds"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:gravity="center"
            android:textSize="35dp"
            android:textStyle="bold"
            android:textColor="@color/black_color"
            >
        </TextView>
        <pl.droidsonroids.gif.GifImageView
            android:translationX="@dimen/margin_10"
            android:translationY="-50dp"
            android:layout_centerInParent="true"
            android:id="@+id/img_rocketfly"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/rocketflynew"/>



        <TextView
            android:translationY="-50dp"
            android:id="@+id/txt_paymentunder_process"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transfer in Progress...!"
            android:gravity="center"
            android:textSize="25dp"
            android:layout_below="@+id/img_rocketfly"
            android:textColor="@color/white"
            >
        </TextView>

        <TextView
            android:translationY="-50dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Do not go back or close application"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_below="@+id/txt_paymentunder_process"
            android:textColor="@color/yellow_bt_color"
            >
        </TextView>
        <ProgressBar
            android:progressTint="@color/white"
            android:foregroundTint="@color/white"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            ></ProgressBar>


    </RelativeLayout>




    <RelativeLayout
          android:visibility="gone"
        android:id="@+id/rr_payment_sucess"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        >

        <TextView
             android:id="@+id/txt_mainheader"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Finished...!"
            android:gravity="center"
            android:textSize="35dp"
            android:textStyle="bold"
            android:textColor="@color/black_color"
            >
        </TextView>

        <ImageView
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:id="@+id/back_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back_button"
            android:padding="10dp"
            ></ImageView>

        <ImageView
            android:translationY="-80dp"
            android:layout_centerInParent="true"
            android:id="@+id/imageTick"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/success"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            ></ImageView>

        <TextView
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:translationY="-50dp"
            android:id="@+id/mainTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageTick"
            android:text="Successfull"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="@color/white"
            >
        </TextView>


        <TextView
            android:layout_below="@+id/mainTitle"
            android:id="@+id/goback"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/white_drawable"
            android:gravity="center"
            android:text="@string/done"
            android:textAllCaps="true"
            android:textColor="@color/black_color"
            android:textSize="@dimen/font_sixteen" />

        <TextView
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:translationY="-20dp"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageTick"
            android:layout_marginTop="5dp"
            android:text=""
            android:gravity="center"
            android:textSize="14dp"
            android:textColor="@color/white"
            >
        </TextView>

    </RelativeLayout>

</LinearLayout>