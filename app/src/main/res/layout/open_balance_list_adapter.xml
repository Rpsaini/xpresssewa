<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
 android:layout_marginTop="7dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white_color"
    android:orientation="vertical"
    android:id="@+id/ll_perform_action_on_curreny"
    android:layout_height="60dp">

    <LinearLayout
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_marginStart="10dp"
            android:id="@+id/img_currencyicon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:padding="5dp"
            android:src="@drawable/send_money"></ImageView>

        <LinearLayout
            android:layout_weight=".94"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:paddingStart="5dp"
            >
            <TextView
                android:id="@+id/txt_currency_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textSize="16dp"
                android:gravity="center|left"
                android:textColor="@color/black_color"
                android:textStyle="bold"
                ></TextView>

            <TextView
                android:visibility="gone"
                android:id="@+id/txt_currency_desc"
                android:textAllCaps="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AUD"
                android:textSize="12dp"
                android:gravity="center|left"
                android:textColor="@color/textcolor"
                android:textStyle="bold"
                ></TextView>

        </LinearLayout>

        <ImageView
            android:tint="@color/blue_bt_color"
            android:layout_height="12dp"
            android:layout_width="12dp"
            android:src="@drawable/next_arrow"
            android:layout_gravity="center"

            ></ImageView>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/textcolor"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:alpha=".2"
        ></View>

</LinearLayout>