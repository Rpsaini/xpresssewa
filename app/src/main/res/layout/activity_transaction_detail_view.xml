<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/skybluecolorcode"
    tools:context=".View.TransactionDetailView">

    <RelativeLayout
        android:id="@+id/rr_upper_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        >
        <ImageView
            android:alpha=".3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_blue_background"
            ></ImageView>

        <ImageView
            android:id="@+id/backarrow"
            android:layout_margin="10dp"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:padding="10dp"
            android:src="@drawable/back_button"
            android:tint="@color/white_color"
            ></ImageView>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_centerInParent="true"
    >

           <ImageView
               android:layout_gravity="center"
            android:id="@+id/img_money"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/send_money"
            android:layout_centerHorizontal="true"
            ></ImageView>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/txt_amount"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Send 0 USD"
            android:layout_below="@+id/img_money"
            android:gravity="center"
            android:textSize="22dp"
            android:textColor="@color/white_color"
            ></TextView>

        <TextView
            android:layout_marginTop="2dp"
            android:id="@+id/txt_receivername"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="User name"
            android:layout_below="@+id/txt_amount"
            android:gravity="center"
            android:textSize="14dp"
            android:textColor="@color/white_color"
            ></TextView>

</LinearLayout>
    </RelativeLayout>



    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@+id/rr_upper_layout"
        android:background="@drawable/upper_corner_drawable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
         <LinearLayout
             android:layout_gravity="center"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="20dp"
             android:orientation="horizontal"
             >

             <TextView

                 android:id="@+id/txt_update"
                 android:gravity="center"
                 android:layout_height="match_parent"
                 android:layout_width="120dp"
                 android:text="Updates"
                 android:textColor="@color/skybluecolorcode"
                 android:textSize="17dp"
                 ></TextView>

             <TextView
                 android:id="@+id/txt_detail"
                 android:gravity="center"
                 android:layout_height="match_parent"
                 android:layout_width="120dp"
                 android:text="Details"
                 android:textColor="@color/skybluecolorcode"
                 android:textSize="17dp"
                 ></TextView>
         </LinearLayout>


        <LinearLayout
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >

            <View

                android:id="@+id/txt_line_update"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_width="120dp"
                android:background="@color/blue_bt_color"
                ></View>

            <View
                android:id="@+id/txt_line_detail"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_width="120dp"
                android:background="@color/blue_bt_color"
                ></View>

        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="40dp"
            android:id="@+id/ll_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
        </LinearLayout>





    </LinearLayout>

</RelativeLayout>