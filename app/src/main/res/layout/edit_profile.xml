<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <LinearLayout

            android:layout_width="match_parent"
            android:orientation="vertical"

            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/first_name_layout_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/margin_5"
                    android:layout_marginTop="@dimen/margin_20"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_first_name"
                        style="@style/edittext_style"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:hint="@string/first_name"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/last_name_layout_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginTop="@dimen/margin_20"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_last_name"
                        style="@style/edittext_style"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:hint="@string/last_name"
                        />
                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/country_layout_name"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_country"
                    style="@style/edittext_style"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:hint="@string/country"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/address_layout_name"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_address"
                    style="@style/edittext_style"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:hint="@string/address"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/city_layout_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/margin_5"
                    android:layout_marginTop="@dimen/margin_20"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_city"
                        style="@style/edittext_style"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:hint="@string/city"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/postcode_layout_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginTop="@dimen/margin_20"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_postcode"
                        style="@style/edittext_style"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:hint="@string/post_code"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>



            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/phone_layout_name"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_phone"
                    style="@style/edittext_style"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:hint="@string/phone"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_fourteen"
                android:text="@string/date_of_birth"
                android:layout_marginTop="@dimen/margin_20"
                android:textColor="@color/dark_grey_color"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="10"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/dd_layout_name"
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:layout_marginRight="@dimen/margin_5"

                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_dd"
                        style="@style/edittext_style"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:hint="DD"
                        />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/mm_layout_name"
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:layout_marginLeft="@dimen/margin_5"

                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_mm"
                        style="@style/edittext_style"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:hint="MM"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/yy_layout_name"
                    android:layout_width="0dp"
                    android:layout_weight="4.5"
                    android:layout_marginLeft="@dimen/margin_5"

                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_yy"
                        style="@style/edittext_style"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:hint="YYYY"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>



