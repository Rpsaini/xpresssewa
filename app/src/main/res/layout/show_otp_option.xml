<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_gravity="bottom"
    android:padding="10dp"

    android:background="@drawable/upper_corner_drawable"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgClose"
        android:padding="7dp"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:src="@drawable/close"
        ></ImageView>

    <TextView
        android:padding="7dp"
        android:textSize="16dp"
        android:textColor="@color/black_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="We will send an OTP for verification, please choose a method: "
        ></TextView>


    <LinearLayout
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        >

        <RadioButton
            android:id="@+id/rd_email"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/skybluecolorcode"
            android:text="Email"
            ></RadioButton>

        <RadioButton
            android:id="@+id/rd_phone"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/skybluecolorcode"
            android:text="Mobile nuumber"
            ></RadioButton>

    </LinearLayout>

    <Button
        android:id="@+id/btnSendOtp"
        android:layout_marginBottom="20dp"
        android:layout_height="45dp"
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        style="@style/button_style"
        android:text="Send OTP"
        ></Button>


</LinearLayout>