<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout

        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin_20"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/margin_25"

            android:text="@string/get_started"
            android:textColor="@color/title_black_color"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_twelve"
            android:layout_marginTop="@dimen/margin_40"

            android:text="@string/country"
            android:textColor="@color/title_black_color"
            />
        <LinearLayout
            android:id="@+id/ll_country"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_height="wrap_content"
            android:weightSum="10">

            <TextView
                android:id="@+id/tv_business"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8.5"

                android:gravity="center_vertical"
                android:text="@string/country"
                android:textSize="@dimen/font_sixteen" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="1.5"
                android:gravity="right">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:src="@drawable/comparison_expand_button" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_5"
            android:background="@color/light_grey_color" />

        <LinearLayout
            android:id="@+id/ll_company"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_height="wrap_content"
            android:weightSum="10">

            <TextView
                android:id="@+id/tv_company"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8.5"

                android:gravity="center_vertical"
                android:text="@string/type_of_company"
                android:textSize="@dimen/font_sixteen" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="1.5"
                android:gravity="right">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:src="@drawable/comparison_expand_button" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_5"
            android:background="@color/light_grey_color" />


        <TextView
            android:id="@+id/tv_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
android:layout_marginTop="@dimen/margin_35"
            android:gravity="center_vertical"
            android:layout_gravity="center_horizontal"
            android:text="@string/please_note_we_cannot_offer"
            android:textSize="@dimen/font_fourteen" />


    </LinearLayout>


    <TextView

        android:id="@+id/company_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white_color"
        android:textSize="@dimen/font_eighteen"
        android:layout_marginTop="@dimen/margin_35"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginRight="@dimen/margin_30"
        style="@style/button_style"
        android:padding="@dimen/margin_15"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="@string/continue_"
        />
</LinearLayout>